<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="main_activity_theme" parent="Theme.Mafia">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="exit_game_window" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="android:buttonBarButtonStyle">@style/exit_game_button</item>
        <item name="android:fontFamily">@font/roboto_bold</item>

    </style>

    <style name="exit_game_button" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="decorate">
        <item name="android:fontFamily">@font/kelly_slab</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="white_bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="basic">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="basic_bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="head_line_1">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="head_line_2">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <attr name="windowColor" format="color"/>
</resources>